{
    "name": "secreate.io",
    "version": "1.0.0",
    "description": "Серверная часть проекта",
    "main": "server/index.js",
    "repository": "git@github.com:qwars/secreate.io.git",
    "author": "Александр Селюнин <aka.qwars@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "develop": "nodemon",
        "build": "imbac ./source -o ./server"
    },
    "nodemonConfig": {
        "restartable": "rs",
        "exec": "mkdir -p public && imbac ./source -o ./public && node ./public/index.js",
        "ignore": [
            ".git",
            "*assets*",
            "node_modules/**/node_modules",
            "*~",
            ".\\#"
        ],
        "verbose": true,
        "watch": [
            "source"
        ],
        "env": {
            "NODE_ENV": "development"
        },
        "ext": "imba"
    },
    "devDependencies": {
        "nodemon": "^2.0.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "imba": "^1.5.2",
        "mongodb": "^3.5.6",
        "mongoose": "^5.9.9",
        "request": "^2.88.2",
        "websocket": "^1.0.31"
    }
}
