
@import '../css-settings.styl'

header
	display: grid
	grid-template-rows: 52px
	grid-template-columns: auto 1fr auto
	grid-gap: 24px
	padding: 0px 24px
	background: color.background
	& > a
		display-flex: flex
		s
			width: 36px
			opacity: .2
		span img
			height: 24px
			transform: translateX( - 28px )